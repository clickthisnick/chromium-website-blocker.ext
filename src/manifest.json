{
  "name": "WebsiteBlocker",
  "description": "Developer Friendly Website Blocker",
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request" : {
    "rule_resources" : [
      {
        "id": "rules_generated",
        "enabled": true,
        "path": "rules_generated.json"
      }
    ]
  },
  "permissions": [
    "tabs",
    "declarativeNetRequest"
  ],
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  }
}
